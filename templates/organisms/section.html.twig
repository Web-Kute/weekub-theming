<section id="{{ id }}" class="section" data-section="{{ id }}">
  <h2>{{title | title}}</h2>
  {% if section_content is not empty %}
    {% include section_content %}
  {% endif %}
</section>

{# Accessibility: Add landmark role and aria-label if title is present #}
{% if title is not empty %}
  <script>
    document.getElementById('{{ id }}').setAttribute('role', 'region');
    document.getElementById('{{ id }}').setAttribute('aria-label', '{{ title | title }}');
  </script>
{% endif %}